<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current turn: player"
            android:id="@+id/current_turn"
            android:layout_weight="0"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <net.lalik.shipbattles.views.OfflineMyBattlefieldView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/my_battlefield_view"
                android:layout_weight="1" />

            <net.lalik.shipbattles.views.OfflineOpponentBattlefieldView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/opponent_battlefield_view"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ships: 10/10"
                android:id="@+id/player_ships"
                android:layout_weight="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ships: 10/10"
                android:id="@+id/opponent_ships"
                android:layout_weight="2" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
